{
  "name": "@razvanz/eventstore-client",
  "version": "0.2.12",
  "description": "A port of the EventStore .Net ClientAPI to Node.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=4.0"
  },
  "engineStrict": true,
  "scripts": {
    "build": "echo 'Builded!'",
    "pretest": "npm run build",
    "test": "nodeunit",
    "test-debug": "TESTS_VERBOSE_LOGGING=1 nodeunit",
    "prepublish": "npm run build && npm run gendocs",
    "gendocs": "rm -rf docs && jsdoc src -r -d docs"
  },
  "files": [
    "lib",
    "docs",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/razvanz/node-eventstore-client.git"
  },
  "keywords": [
    "eventstore",
    "geteventstore",
    "node"
  ],
  "author": "Nicolas Dextraze",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/razvanz/node-eventstore-client/issues"
  },
  "homepage": "https://github.com/razvanz/node-eventstore-client#readme",
  "dependencies": {
    "@types/long": "^3.0.31",
    "@types/node": "^6.0.47",
    "long": "^3.2",
    "protobufjs": "^6.7.3",
    "uuid": "^3.0.1",
    "strict-event-emitter-types": "^1.2.0"
  },
  "devDependencies": {
    "eslint": "^4.12.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "@types/long": "^3.0.31",
    "@types/node": "^6.0.47",
    "strict-event-emitter-types": "^1.2.0",
    "jsdoc": "^3.5.5",
    "nodeunit": "^0.11.1"
  }
}
